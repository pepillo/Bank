@{
    ViewBag.Title = "Home Page";
}

<!--JDR: ASP.NET Uses bootstrap for carousel-->
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="@Url.Content("~/Content/Images/BannerInvestorRelations.png")" alt="">
        </div>

        <div class="item">
            <img src="@Url.Content("~/Content/Images/BannerManufacturing.png")" alt="">
        </div>

        <div class="item">
            <img src="@Url.Content("~/Content/Images/BannerRansomware.png")" alt="">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!--JDR: Set loan types btn UI-->
<!--JDR: TODO: Set gray filter in css later-->
<div class="loan-options-container row text-center">
    <div class="col-md-4">
        <img class="loan-options-img" src="@Url.Content("~/Content/Images/LoanPersonal.jpg")" alt=""> <!--JDR: Image very BIG should reduce quality in real world application-->
        <h3 class="loan-options-title">Personal Loan</h3>
        <div class="loan-options-text">
            Personal loan with lower interest rate than on an unsecured personal loan.
        </div>
        <a href="@Url.Action("RequestLoan", "Loans", new { TypeLoan = "PL" })" class="btn bank-yellow-btn">APPLY NOW</a>
    </div>
    <div class="col-md-4">
        <img class="loan-options-img" src="@Url.Content("~/Content/Images/LoanAuto.jpg")" alt=""> <!--JDR: Image very BIG should reduce quality in real world application-->
        <h3 class="loan-options-title">Auto Loan</h3>
        <div class="loan-options-text">
            Obtain your auto insurance and readside assistance product 100% online
        </div>
        <a href="@Url.Action("RequestLoan", "Loans", new { TypeLoan = "AL" })" class="btn bank-yellow-btn">APPLY NOW</a>
    </div>
    <div class="col-md-4">
        <img class="loan-options-img" src="@Url.Content("~/Content/Images/LoanHome.jpg")" alt=""> <!--JDR: Image very BIG should reduce quality in real world application-->
        <h3 class="loan-options-title">Home Loan</h3>
        <div class="loan-options-text">
            Recive an instant pre-approval for your mortgage loan.
        </div>
        <a href="@Url.Action("RequestLoan", "Loans", new { TypeLoan = "HL" })" class="btn bank-yellow-btn align-bottom align-text-bottom">APPLY NOW</a>
    </div>
</div>

