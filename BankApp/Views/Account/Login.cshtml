@model Bank.Models.User

@{
    ViewBag.Title = "Login";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="login row center-block">
    <div class="form-horizontal col-md-6 col-md-offset-3">
        <div class="banl-header">Login</div>
        <h4>Lorem ipsum dolor sit amet, consectetur adipiscing.</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-at"></i></span>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "login-input", placeholder = "E-mail Address" } })
                </div>
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "login-input", placeholder = "Password" } })
                </div>
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <input class="login-submit-btn btn banl-yellow-btn" type="submit" value="Login" />

        <div class="text-center">
            <a class="btn login-register-btn" href="@Url.Action("Register", "Account")">Register</a>
        </div>

        <div class="text-center">
            <a href="@Url.Action("ForgotPassword", "Account")" class="btn">Forgot Password</a>
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
